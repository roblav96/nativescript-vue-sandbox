{
	"compilerOptions": {
		"baseUrl": "app",
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"lib": ["esnext"],
		"module": "es2015",
		"moduleResolution": "node",
		"noEmitHelpers": true,
		"skipLibCheck": true,
		"target": "es5",
		"paths": {
			"@/*": ["app/*"]
		}
	},
	"include": [
		"node_modules/tns-platform-declarations/android-28.d.ts",
		"types/**/*.d.ts",
		"app/**/*.ts"
	]
}
